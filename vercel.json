{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "functions": {
    "api/**/*.ts": { "runtime": "nodejs18.x" },
    "api/**/*.js": { "runtime": "nodejs18.x" }
  },
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "MONGODB_DB": "portfolio"
  }
}
